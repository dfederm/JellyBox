<Page
    x:Class="JellyBox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource BackgroundBase}">

    <Grid XYFocusKeyboardNavigation="Enabled">
        <Frame x:Name="ContentFrame" />

        <Grid
            x:Name="NavigationOverlay"
            Visibility="Collapsed"
            XYFocusKeyboardNavigation="Enabled">

            <Rectangle
                Fill="{StaticResource OverlayBackground}"
                Tapped="CloseNavigation" />

            <NavigationView
                x:Name="NavigationPanel"
                HorizontalAlignment="Left"
                Width="{StaticResource NavigationPanelWidth}"
                Background="{StaticResource BackgroundElevated}"
                MenuItemsSource="{x:Bind ViewModel.NavigationItems, Mode=OneWay}"
                ItemInvoked="{x:Bind ViewModel.NavigationItemSelected}"
                IsPaneOpen="True"
                PaneDisplayMode="Left"
                IsBackButtonVisible="Collapsed"
                IsSettingsVisible="False"
                IsPaneToggleButtonVisible="False"
                OpenPaneLength="{StaticResource NavigationPanelWidth}"
                CompactPaneLength="0">
                <NavigationView.RenderTransform>
                    <TranslateTransform x:Name="NavPanelTransform" X="-360" />
                </NavigationView.RenderTransform>
            </NavigationView>
        </Grid>
    </Grid>

    <Page.Resources>
        <Storyboard x:Name="SlideInAnimation">
            <DoubleAnimation
                Storyboard.TargetName="NavPanelTransform"
                Storyboard.TargetProperty="X"
                From="-360"
                To="0"
                Duration="0:0:0.25">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="NavigationOverlay"
                Storyboard.TargetProperty="Opacity"
                From="0"
                To="1"
                Duration="0:0:0.2" />
        </Storyboard>

        <Storyboard x:Name="SlideOutAnimation" Completed="SlideOutCompleted">
            <DoubleAnimation
                Storyboard.TargetName="NavPanelTransform"
                Storyboard.TargetProperty="X"
                From="0"
                To="-360"
                Duration="0:0:0.2">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation
                Storyboard.TargetName="NavigationOverlay"
                Storyboard.TargetProperty="Opacity"
                From="1"
                To="0"
                Duration="0:0:0.2" />
        </Storyboard>
    </Page.Resources>
</Page>
